<div class="flex-lg-row-fluid ms-lg-10">
    <div class="card">
        <div class="card-header card-header-stretch">
            <div class="card-title d-flex align-items-center">
                <h3 class="fw-bolder m-0 text-gray-800">REGISTRATE</h3>
            </div>
            <div class="card-toolbar m-0">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0 fw-bolder" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a id="tab_reg_rapido" class="nav-link justify-content-center text-active-gray-800 active" data-bs-toggle="tab" role="tab" href="#kt_activity_today">Registro Rápido</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div id="kt_activity_today" class="card-body p-0 tab-pane fade show active" role="tabpanel" aria-labelledby="tab_reg_rapido">
                    <div class="row">
                        <div class="col-lg-12">
                            <form id="frmRegistroRap" novalidate>

                                @Html.Partial("_PartialViewEncabezadoMsj")

                                <div class="row mb-8">
                                    <div class="col-12">
                                        <label class="required form-label">Nombre completo:</label>
                                        <input class="inputClear form-control letter text-uppercase" autocomplete="off" onkeyup="_toUppercase(this);" placeholder="Nombre completo" type="text" name="nombre_completo_form_rap" id="txtNombreFormRap" />
                                    </div>
                                </div>
                                <div class="row mb-8">
                                    <div class="resize col-8">
                                        <label class="required form-label">Correo electrónico:</label>
                                        <input class="inputClear form-control" autocomplete="off" placeholder="Corrreo electrónico" type="email" name="correo_form_rap" id="txtCorreoFormRap" />
                                    </div>
                                    <div class="resize col-4">
                                        <label class="required form-label">Número de celular a 10 dígitos:</label>
                                        <input class="inputClear form-control numbers" autocomplete="off" placeholder="961-123-4567" type="text" name="telefono_form_rap" id="txtTelefonoFormRap" maxlength="10" />
                                    </div>
                                </div>
                                <div class="row mb-8">
                                    <div class="resize col-3">
                                        <label class="required form-label">Género:</label>
                                        <select class="form-control" name="genero" id="cboGeneroRap">
                                            <option selected value="SEL">[SELECCIONE]</option>
                                            <option value="M">MUJER</option>
                                            <option value="H">HOMBRE</option>
                                            <option value="X">PREFIERO NO DECIRLO</option>
                                        </select>
                                    </div>
                                    <div class="resize col-6">
                                        <label class="required form-label">Elige una opción con la que se identifique:</label>
                                        <select class="form-control" name="opcion" id="cboIdentifiqueRap">
                                            <option selected value="SEL">[SELECCIONE]</option>
                                            <option value="EMPRENDEDOR">EMPRENDEDOR</option>
                                            <option value="EMPRESARIO">EMPRESARIO(A)</option>
                                            <option value="PUBLICO">PÚBLICO EN GENERAL</option>
                                        </select>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-primary fa-pull-right" id="btnRegistro"><i class="fa fa-check"></i> Registrarme</button>
                </div>
            </div>
        </div>
    </div>
</div>